<%- include('shared/header.ejs') %>


    <body id="login">

        <div class="overlay">

            <!-- ======================Registration form================================= -->
            <div class="container pt-5">
                <div class="row">
                    <div class="col-md-7 m-auto p-5">
                        <div class="form p-5 ">
                            <h2 class="text-center text-white">Registration</h2>
                            <form method="post" action="/handelRegistar">
                                <div class="row mt-3">
                                    <div class="col">
                                        <input value="<%= oldInputs.first_name %>" type="text" name="first_name" class="form-control inp pt-3" placeholder="First Name">
                                        <% if (error.find(e=>e.param=='first_name')) { %>
                                            <div class="alert alert-danger text-center my-3">
                                                First-Name is Required
                                            </div>
                                            <% } %>
                                    </div>
                                    <div class="col">
                                        <input value="<%= oldInputs.last_name %>" type="text"  name="last_name" class="form-control inp pt-3" placeholder="Last Name">
                                        <% if (error.find(e=>e.param=='last_name')) { %>
                                            <div class="alert alert-danger text-center my-3">
                                                Last-Name is Required
                                            </div>
                                            <% } %>
                                    </div>
                                </div>
                                <input value="<%= oldInputs.usrename %>" type="text" name="usrename" class="form-control inp pt-3" placeholder="Username">
                                <% if (error  .find(e=>e.param=='usrename')) { %>
                                    <div class="alert alert-danger text-center my-3">
                                        username is Required
                                    </div>
                                    <% } %>
                                        <input  value="<%= oldInputs.email %>" type="email" name="email" class="form-control inp pt-3" placeholder="Email">
                                        <% if (error.find(e=>e.param=='email')) { %>
                                            <div class="alert alert-danger text-center my-3">
                                                email is Required
                                            </div>
                                            <% } %>
                                                <input value="<%= oldInputs.password %>" type="password"  name="password" class="form-control inp pt-3 mb-3" placeholder="Password">
                                                <% if (error.find(e=>e.param=='password')) { %>
                                                    <div class="alert alert-danger text-center my-3">
                                                        Password is Required
                                                    </div>
                                                    <% } %>
                                                        <button type="submit " class="btn btn-outline-dark text-white w-100">SignUp</button>
                                                        <p class="text-center pb-3"> <a href="/" class="text-white mt-3 d-block">Sign In Here</a></p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include('shared/footer.ejs') %>
