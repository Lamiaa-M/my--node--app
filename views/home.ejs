
<%- include('shared/header.ejs') %> 
<%- include('shared/nav.ejs') %> 



    <div class="container home">
        <div class="row">
            <div class="col-md-6 m-auto">
                <div class="post-topbar card m-5">
                    <a class="btn btn-dark text-white btn-custom" data-toggle="modal" data-target="#exampleModal"
                        href="">New Post</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header text-center text-white">
                    <h5 class="modal-title " id="exampleModalLabel">Post a text</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="text-white" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="/handelPost" method="post">
                        <input class="form-control my-3" name="title" placeholder="Enter Title" type="text">
                        <textarea class="form-control" placeholder="Enter Text" name="post" id="" cols="30"
                            rows="10"></textarea>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-dark text-white ">Post</button>
                            </div>
                    </form>
                </div>
              
            </div>
        </div>
    </div>

    <!-- ==============================posts========================================  -->
    <div class="container">
        <div class="row">
            <% for( let i = 0; i < posts.length; i++ ) { %>

            <div class="col-md-7  card p-4 auto">
                <div class="post">
                    <div class="media">
                        <img src="/images/378b7d3d5beb192bd81ded2284696fae.jpg" width="60" class="mr-3" alt="...">
                        <div class="media-body">
                            <h5 class="mt-0"><%= posts[i].userID.usrename %></h5>
                                   <p > <%= date %> </p>
                        </div>
                    </div>
                    <hr>
                    <h3><%= posts[i].title %></h3>
                    <p class="pt-4"><%= posts[i].post %></p>
                    
                </div>
            </div>

            <% } %>


        </div>
    </div>
    <!-- ==============================/posts========================================  -->


    <%- include('shared/footer.ejs') %> 




